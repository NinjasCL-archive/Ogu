;; type clases

data Shape = Circle Float Float Float Float | Rectangle Float Float Float Float

let circle = Circle 10 20 5
let rect   = Rectangle 50 230 60 90


data Point = Point Float Float deriving (Show)

data Shape = Circle Point Float | Rectangle Point Point
     deriving (Show)

def surface : Shape -> Float
let surface (Circle _ r) = pi * r ^ 2
let surface (Rectangle (Point x1 y1) (Point x2 y2)) = (abs (x2 - x1)) * (abs (y2 - y1))


data Circulo = Circulo{x:Int, y: Int, radius : Float}

data Rectangulo = Rectangulo{ x:Int , y:int, alto:Int, ancho:Int }

;; estas son estructuras mutables

var circulo = Circulo{x=0, y=0, radius=100.0}

var cuadro = Rectangulo{x=0, y=0, alto=50, ancho=50}

let xc = x cuadro
let yc = y cuadro

;; abominación! sólo funciona con var
set x cuadro = xc + 10
set y cuadro = yc + 10

;; forma corta

cuadro @ y <- 10
cuadro @ x <- 10
