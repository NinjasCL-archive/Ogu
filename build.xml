<project name="Ogu" default="dist" basedir=".">
	 <property name="ant.requiredVersion" value="1.8.2"/>
	 <property name="project.name" value="ogu" />
	 <property name="antlr.jar" value="antlr.jar" />

	 <import file="config/ant/build-setup.xml"/>

	 <target name="init">
	 	<!-- Create the time stamp -->
        <tstamp />
	 	<mkdir dir="${oguParserDirectory}"/>
	 	<mkdir dir="${classes}/META-INF" />
	 	<mkdir dir="${dist}" />
	 	 <!-- Check if environment variable ANTLR_HOME is set -->

	 </target>

	 <target name="Ogu" depends="antlr_classpath" description="Ensure all the Antlr generated files are up to date.">
        
        <antlr3 grammar.name="Ogu.g" package="parser" />
        <antlr3 grammar.name="OguWalker.g" package="parser" />    
     </target>

    <target name="compile" depends="init, Ogu" description="compile">
        <!-- Compile the java code from ${src} into ${classes} -->
        <javac debug="true" srcdir="${mainSourceDirectory}" destdir="${classes}"             
               listfiles="Yes" deprecation="Yes" includeantruntime="false">
            <compilerarg value="-Xlint:unchecked"/>
            <classpath>
               <path refid="antlr.path"/>
            </classpath>
        </javac>
    </target>

    <target name="manifest">
        <manifest file="${classes}/META-INF/MANIFEST.MF">
            <attribute name="Main-Class" value="net.lnds.ogu.compiler.Ogu" />
            <attribute name="Class-Path" value="antlr.jar" />
        </manifest>
    </target>

     <target name="dist" depends="compile, manifest" 
       description="generate for distribution">
        <jar jarfile="${dist}/${project.name}.jar" basedir="${classes}" 
            manifest="${classes}/META-INF/MANIFEST.MF"/>
    </target>



</project>

